@model WebApplication1.Models.Member

@{
    Layout = "/Pages/_Layout.cshtml";
}


<style>
    .memberBody {
        width: 100%;
        padding: 20px;
        height: 100%;
        background-color: #FAFAFA;
    }

    .upperBody {
        height: 10%;
        width: 100%;
        border-radius: 5px;
        padding: 15px;
        background-color: white;
        box-shadow: 0 0 10px 2px rgba(0, 0, 0, 0.05);
        padding-top: 18px;
    }

    .middleBody {
        /*         background-color: white; */
        border-radius: 7px;
        /* box-shadow: 0 0 10px 2px rgba(0, 0, 0, 0.05); */
        padding-top: 18px;
        
        height: 85%;
    }

    .middleBodyEdit {
        width: 100%;
        border-radius: 7px;
        background-color: white;
        box-shadow: 0 0 10px 2px rgba(0, 0, 0, 0.05);
        padding-top: 18px;
    }


    .inputBox {
        padding: 10px 20px;

    }




    .edit-Button  {
            background-color: #304D70;
            color: white;
            padding: 6px 18px;
            border-radius: 5px;
            transition: transform 0.3s ease;
            border: none;
            text-decoration: none;
        }

        .edit-Button:hover {
                transition: 0.5s;
                transform: scale(1.1);
                color: white;
            }

    .cancelBTN {
        text-decoration: none;
        color: white;
    }

    .cancelBTN:hover {
        text-decoration: none;
        color: white;
    }

</style>

<div class="memberBody">
    <div class="upperBody">
        <h4><b>Members</b></h4>
    </div>


    <div class="middleBody">
        <div class="middleBodyEdit">

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="MemberID" />

                <div class="inputBox">
                    <div class="form-group">
                        <label asp-for="MemberFirstName" class="control-label"></label>
                        <input asp-for="MemberFirstName" class="form-control" />
                        <span asp-validation-for="MemberFirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <label asp-for="MemberLastName" class="control-label"></label>
                        <input asp-for="MemberLastName" class="form-control" />
                        <span asp-validation-for="MemberLastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <label asp-for="MemberEmail" class="control-label"></label>
                        <input asp-for="MemberEmail" class="form-control" />
                        <span asp-validation-for="MemberEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <label asp-for="MemberPhoneNumber" class="control-label"></label>
                        <input asp-for="MemberPhoneNumber" class="form-control" />
                        <span asp-validation-for="MemberPhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <label asp-for="MemberDateJoined" class="control-label"></label>
                        <input asp-for="MemberDateJoined" class="form-control" />
                        <span asp-validation-for="MemberDateJoined" class="text-danger"></span>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <label asp-for="MemberDateLeft" class="control-label"></label>
                        <input asp-for="MemberDateLeft" class="form-control" />
                        <span asp-validation-for="MemberDateLeft" class="text-danger"></span>
                    </div>
                </div>

                
                <div class="inputBox">
                    <div class="form-group">
                        <button type="submit" class="edit-Button">Save</button>
                        <button class="edit-Button"><a asp-action="Index" class="cancelBTN">Cancel</a></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>