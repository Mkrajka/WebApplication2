@model WebApplication1.Models.Classes

@{
    ViewData["Title"] = "Delete";
    Layout = "/Pages/_Layout.cshtml";
}

<head>
    
    <link rel="stylesheet" href="~/css/Views/Classes/delete.css" />
</head>

<div class="memberBody">
    <div class="upperBody">
        <h4><b>Classes</b></h4>
    </div>

    <div class="middleBody">
        <div class="middleBodyEdit">
            <div class="inputBox">
                <h3>Are you sure you want to delete this?</h3>
            </div>

            <form asp-action="Delete" method="post">

                <div class="inputBox">
                    <div class="form-group">
                        <input type="hidden" asp-for="ClassID" />
                        <label asp-for="ClassName" class="control-label"></label>
                        <p>@Model.ClassName</p>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <input type="hidden" asp-for="ClassID" />
                        <label asp-for="Description" class="control-label"></label>
                        <p>@Model.Description</p>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <input type="hidden" asp-for="ClassID" />
                        <label asp-for="Date" class="control-label"></label>
                        <p>@Model.Date</p>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <input type="hidden" asp-for="ClassID" />
                        <label asp-for="Duration" class="control-label"></label>
                        <p>@Model.Duration</p>
                    </div>
                </div>

                <div class="inputBox">
                    <div class="form-group">
                        <button type="submit" class="edit-Button">Delete</button>
                        <button class="edit-Button"> <a asp-action="Index" class="cancelBTN">Cancel</a></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>