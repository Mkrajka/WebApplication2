    }


    .middle-table {
        padding-top: 20px;
        height: 100%;
        border-radius: 5px;
    }

    .middle-table-bottom {
        background-color: white;
        height: 92%;
        border-radius: 5px;
        box-shadow: 0 0 10px 2px rgba(0, 0, 0, 0.05);
    }


    .middleBody-Left {
        /* background-color: yellow; */
        width: 70%;
        height: 100%;
        /* padding-top: 80px; */
    }





    .inputBox {
        padding: 10px 20px;
    }




    .edit-Button {
