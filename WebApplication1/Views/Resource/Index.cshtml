                                <input type="text" id="ItemPrice" class="form-control" name="ItemPrice" required>

                            </div>

                            <div class="inputBox">
                                <label for="ItemNotes" class="control-label">Item Notes</label>
                                <input type="text" id="ItemNotes" class="form-control" name="ItemNotes" required>

                            </div>

