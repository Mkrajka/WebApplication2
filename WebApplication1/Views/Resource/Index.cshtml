                                <input type="text" id="ItemQuantity" class="form-control" name="ItemQuantity" required>

                            </div>

                            <div class="inputBox">
                                <label for="PurchasedDate" class="control-label">Purchased Date</label>
                                <input type="date" id="PurchasedDate" class="form-control" name="PurchasedDate" required>
                            </div>

                            <div class="inputBox">
